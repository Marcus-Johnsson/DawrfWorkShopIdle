<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DawrfWorkShopIdle.Veiw.Register"
             Title="Register">
    
    
    <VerticalStackLayout>
        <ContentPage>
            <StackLayout
 
             VerticalOptions="Center" 
             HorizontalOptions="Center"
             Padding="50"
             BackgroundColor="Transparent"
             Spacing="20"  
             Margin="0, 50, 0, 0">

                <Entry x:Name="RegisterUsername" Placeholder="Username"> </Entry>
                <Entry x:Name="RegisterPassword" Placeholder="Password" IsPassword="True"> </Entry>
                <Button Text="Create Account"
                        Clicked="OnCreateAccountClicked"
                        BackgroundColor="Transparent"
                        TextColor="Gold"
                        BorderColor="Gold"
                        BorderWidth="1">
                </Button>

                <Button Text="Cancel"
                        Clicked="OnCancelClicked"
                        BackgroundColor="Transparent"
                        TextColor="Gold"
                        BorderColor="Gold"
                        BorderWidth="1">
                </Button>

            </StackLayout>
</ContentPage>
</VerticalStackLayout>
</ContentPage>